{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc.8",
  "productName": "EpiSensor App Template",
  "version": "1.0.0",
  "identifier": "com.episensor.app-template",
  "build": {
    "beforeDevCommand": "cd web && npm run dev",
    "beforeBuildCommand": "VITE_API_URL=http://localhost:8080 cd web && npm run build && cd .. && npm run build:sidecar",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../web/dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "EpiSensor App Template",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "binaries/server-*": "./server"
    },
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "EpiSensor Application Template",
    "longDescription": "A comprehensive template for building EpiSensor desktop applications with Tauri and Node.js backend"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}