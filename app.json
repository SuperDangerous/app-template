{
  "name": "SuperDangerous App Template",
  "version": "1.0.0",
  "description": "Template for SuperDangerous Electron desktop applications",
  "ports": {
    "api": 7500,
    "web": 7501,
    "websocket": 7500
  },
  "development": {
    "autoStart": true,
    "openBrowser": false,
    "logLevel": "info"
  },
  "production": {
    "bundleBackend": true,
    "autoStart": true,
    "logLevel": "warn"
  },
  "database": {
    "path": "./data/app.db",
    "backup": true
  },
  "logging": {
    "level": "info",
    "file": "./data/logs/app.log",
    "maxSize": "10MB",
    "maxFiles": 10
  },
  "security": {
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:7501", "file://"]
    }
  }
}