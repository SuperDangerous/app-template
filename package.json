{
  "name": "@superdangerous/app-template",
  "version": "1.1.0",
  "description": "Template for SuperDangerous Electron desktop applications with Node.js backend",
  "type": "module",
  "main": "electron/main.cjs",
  "devServer": {
    "backendPort": 7500,
    "frontendPort": 7501,
    "webSocketPort": 7500,
    "backendCommand": "tsx watch src/index.ts",
    "frontendCommand": "cd web && npx vite --port 7501"
  },
  "scripts": {
    "dev": "dev-server",
    "build": "npm run build:api && npm run build:web",
    "build:api": "tsc",
    "build:web": "cd web && npm run build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:7501 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf dist web/dist dist_electron",
    "setup": "npm install && cd web && npm install"
  },
  "dependencies": {
    "@superdangerous/app-framework": "^4.9.0",
    "boxen": "^8.0.1",
    "concurrently": "^9.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.32.0",
    "playwright": "^1.55.0",
    "prettier": "^3.5.1",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.0"
  },
  "keywords": [
    "superdangerous",
    "template",
    "application",
    "framework",
    "electron"
  ],
  "author": "SuperDangerous",
  "license": "PROPRIETARY",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  }
}
