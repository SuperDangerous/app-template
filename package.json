{
  "name": "@episensor/app-template",
  "version": "1.0.0",
  "description": "Template for building EpiSensor internal applications",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "NODE_ENV=production tsx src/index.ts",
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
    "clean": "rm -rf dist coverage .eslintcache",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "desktop": "DESKTOP=true npm start",
    "docker:build": "docker build -t app-template .",
    "docker:run": "docker run -p 3000:3000 app-template",
    "validate": "npm run typecheck && npm run lint && npm run test:run",
    "prepare": "npm run build",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@episensor/app-framework": "^3.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "socket.io": "^4.7.5",
    "zod": "^3.22.4",
    "multer": "^1.4.5-lts.1",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/socket.io": "^3.0.2",
    "@types/multer": "^1.4.11",
    "@types/bcrypt": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "tsx": "^4.6.2",
    "vitest": "^1.0.4",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  },
  "keywords": [
    "episensor",
    "template",
    "application",
    "framework"
  ],
  "author": "EpiSensor",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}