{
  "name": "@episensor/app-template",
  "version": "1.0.0",
  "description": "Template for building EpiSensor internal applications",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "NODE_ENV=production tsx src/index.ts",
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint src/ --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist coverage",
    "desktop": "DESKTOP=true npm start"
  },
  "dependencies": {
    "@episensor/app-framework": "^3.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "tsx": "^4.6.2",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "episensor",
    "template",
    "application",
    "framework"
  ],
  "author": "EpiSensor",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}